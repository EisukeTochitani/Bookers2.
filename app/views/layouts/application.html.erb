<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
    <header class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
           <%=link_to "Bookers", root_path  %>
           
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user), class:"btn btn-link" do %>
                <i class="fas fa-home">Home</i>
                
                <% end %>
              </li>
              <li>
                <%= link_to users_path, class:"btn btn-link" do %>
                <span> Users</span>
                <% end %>
              </li>
              <li>
                <%= link_to books_path, class:"btn btn-link" do %>
                <span> Books</span>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, class:"btn btn-link" do %>
                <span> Logout</span>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to root_path, class:"btn btn-link" do %>
                <span> Home</span>
                <% end %>
              </li>
              <li>
                <%= link_to home_about_path, class:"btn btn-link" do %>
                <span> About</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path, class:"btn btn-link" do %>
                <span> sign up</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path, class:"btn btn-link" do %>
                <span> login</span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    
      <p class="notice"><%= notice %></p>

      <%= yield %>


   <footer>
    <div class='container mt-5'>
    	<div class='row'>
    	  <div class='mx-auto'>
    		  <p>CopyRight Infratop.inc</p>
    	  </div>
      </div>
    </div>
  </footer>

      </div>
    </div>
  </body>
</html>